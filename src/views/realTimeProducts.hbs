<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/3.1.3/socket.io.js"
    ></script>
  </head>
  <body>
    <ul id="productList">
      {{#each products}}
        <li>
          <h3>{{title}}</h3>
          <p>{{description}}</p>
          <p>Price: {{price}}</p>
          <img src={{img}} alt="" />
        </li>
      {{/each}}
    </ul>

    {{! Se establece conexion con Socket.IO y se define el evento para recibir actualizacion de productos }}

    <script>
      const socket = io(); socket.on("updateProducts", (products) => { const
      productList = document.getElementById("productList");
      productList.innerHTML = ""; products.forEach((product) => { const listItem
      = document.createElement("li"); listItem.innerHTML = `
      <h3>${product.title}</h3> <p>${product.description}</p> <p>Price:
      ${product.price}</p> `; productList.appendChild(listItem); }); });
    </script>

  </body>

</html>